{
  "name": "@bitsy/cli",
  "version": "0.0.1",
  "description": "bitsy command line tools",
  "author": {
    "name": "SK-ERIC",
    "email": "graceful.sk0@gmail.com",
    "url": "https://github.com/SK-ERIC"
  },
  "license": "MIT",
  "homepage": "https://github.com/SK-ERIC/bitsy-cli",
  "repository": {
    "url": "https://github.com/SK-ERIC/bitsy-cli.git"
  },
  "bugs": {
    "url": "https://github.com/SK-ERIC/bitsy-cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "bitsy": "dist/index.cjs",
    "bt": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm typecheck && unbuild && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "stub": "pnpm -r run stub",
    "lint": "eslint . --fix",
    "format": "bt prettier-write",
    "commit": "bt git-commit",
    "cleanup": "bt cleanup",
    "update-pkg": "bt ncu",
    "publish-pkg": "pnpm -r publish --access public",
    "typecheck": "tsc --noEmit",
    "release": "bt release && pnpm build && pnpm publish-pkg"
  },
  "dependencies": {
    "bumpp": "^9.2.0",
    "c12": "^1.5.1",
    "cac": "^6.7.14",
    "cli-progress": "^3.12.0",
    "consola": "^3.2.3",
    "convert-gitmoji": "^0.1.3",
    "dayjs": "^1.11.10",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.1.0",
    "minimist": "^1.2.8",
    "npm-check-updates": "^16.14.11",
    "ofetch": "^1.3.3",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@bitsy/cli": "link:",
    "@types/cli-progress": "^3.11.5",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "eslint-config-bitsy": "0.0.2-beta.0",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "unbuild": "^2.0.0"
  }
}
